<Window x:Class="TaskPanel.UI.PromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="143" Width="381">
    <StackPanel Margin="10">
        <Label Content="{Binding Label}" />
        <TextBox Text="{Binding Text}" Margin="0 0 0 10" />
        <Button x:Name="btnConfirm" Content="{Binding Button}" Click="btnConfirm_Click" />
    </StackPanel>
</Window>
